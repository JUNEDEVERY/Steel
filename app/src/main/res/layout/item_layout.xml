<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/idImageView"
        android:layout_width="125dp"
        android:layout_height="134dp"
        android:layout_marginStart="6dp"
        app:layout_constraintEnd_toStartOf="@+id/idTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/idTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center"

        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="16dp"
        android:textSize="10dp"
        android:text="Цена"
        app:layout_constraintEnd_toStartOf="@+id/idCost2"
        app:layout_constraintStart_toEndOf="@+id/idImageView"
        app:layout_constraintTop_toBottomOf="@+id/idTitle" />

    <TextView
        android:id="@+id/idCost2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/idTWOstatok"
        app:layout_constraintStart_toEndOf="@+id/idCost"
        app:layout_constraintTop_toBottomOf="@+id/idTitle" />

    <TextView
        android:id="@+id/idTWOstatok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:text="Остаток на складе"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/idStockAvailability"
        app:layout_constraintStart_toEndOf="@+id/idImageView"
        app:layout_constraintTop_toBottomOf="@+id/idCost" />

    <TextView
        android:id="@+id/idStockAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="1dp"
        android:text="TextView"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/idAvailabilityInTheStore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/idTWOstatok"
        app:layout_constraintTop_toBottomOf="@+id/idTitle" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:text="Доступность в магазине"
        android:textSize="10dp"
        app:layout_constraintEnd_toStartOf="@+id/idAvailabilityInTheStore"
        app:layout_constraintStart_toEndOf="@+id/idImageView"
        app:layout_constraintTop_toBottomOf="@+id/idTWOstatok" />

    <TextView
        android:id="@+id/idAvailabilityInTheStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="106dp"
        android:text="TextView"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/idStockAvailability" />

</androidx.constraintlayout.widget.ConstraintLayout>